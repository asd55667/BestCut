{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom", "es6", "es7"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "declaration": true,
    // "outFile": "./out.js",
    // "outDir": "/dist",
    "rootDir": ".",
    // "removeComments": false,
    // "noEmit": true,
    "importHelpers": true,

    /* 严格的类型检查选项 */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "strictFunctionTypes": false,
    // "alwaysStrict": true,

    /* 额外的检查 */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    /* 模块解析选项 */
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,

    /* Source Map Options */
    "sourceMap": true,
    // "sourceRoot": ".",
    // "mapRoot": ".",
    // "inlineSourceMap": true,
    // "inlineSources": true,

    /* 其他选项 */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "typings/**/*.ts"
    //
  ],
  "exclude": ["node_modules", "**/dist", "**/*.js"]
}
